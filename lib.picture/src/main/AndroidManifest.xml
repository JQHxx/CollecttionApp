<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.luck.picture.lib">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_MEDIA_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:supportsRtl="true">
        <activity
            android:name=".PictureSelectorActivity"
            android:screenOrientation="portrait"
            android:theme="@style/activity.Theme"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".PictureBaseActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".PicturePreviewActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".PictureVideoPlayActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="sensor" />
        <activity
            android:name=".PictureExternalPreviewActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".PicturePlayAudioActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <activity
            android:name="cafe.adriel.androidaudiorecorder.AudioRecorderActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat" />

        <activity
            android:name="cafe.adriel.androidaudiorecorder.AudioRecordServiceActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat" />

        <activity
            android:name="cafe.adriel.androidaudiorecorder.HejunAudioRecordServiceActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat" />

        <!--在service中进行录音-->
        <service
            android:name="cafe.adriel.androidaudiorecorder.RecordService"
            android:enabled="true"
            android:exported="false"/>
    </application>

</manifest>