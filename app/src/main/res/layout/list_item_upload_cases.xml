<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingBottom="12dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="12dp">

    <com.huateng.fm.ui.widget.FmCheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:checkedDrawable="@drawable/checkbox_thumb_un"
        app:totalSize="40dp"
        app:unCheckedDrawable="@drawable/checkbox_thumb" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="张晓"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <com.huateng.collection.widget.CaseFillReminder
            android:id="@+id/csv_fillReminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_name"
            android:layout_alignParentRight="true" />


        <RelativeLayout
            android:id="@+id/v_caseAmt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_marginTop="7dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_tag2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="委案金额："
                android:textColor="@color/gray_textcolor"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_amt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_tag2"
                android:layout_toRightOf="@id/tv_tag2"
                android:text="20000.5 元"
                android:textColor="@color/gray_textcolor"
                android:textSize="17sp" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/v_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/v_caseAmt"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="委案日期: "
                android:textColor="@color/gray_textcolor"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016/11/6"
                android:textColor="@color/gray_textcolor"
                android:textSize="17sp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/v_caseNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/v_date"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="案件号："
                android:textColor="@color/gray_textcolor"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_caseId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_tag"
                android:layout_toRightOf="@id/tv_tag"
                android:text="3658468995255"
                android:textColor="@color/gray_textcolor"
                android:textSize="15sp" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/v_uploadState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/v_caseNo"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <com.huateng.fm.ui.view.FmNumericProgressBar
                android:id="@+id/csv_uploadProgress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_uploadState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正在上传"
                android:textColor="@color/gray_textcolor"
                android:textSize="15sp" />

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>