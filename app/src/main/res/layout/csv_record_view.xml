<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/v_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_recordState"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/record_state" />

        <Chronometer
            android:id="@+id/chronometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:format="%s"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </LinearLayout>


    <com.huateng.collection.widget.RecordButton
        android:id="@+id/iv_record"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_below="@id/v_state"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_record"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="点击录音"
        android:textColor="@color/gray_textcolor"
        android:textSize="16sp" />
</RelativeLayout>