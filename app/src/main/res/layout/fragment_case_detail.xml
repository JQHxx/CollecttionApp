<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_gray_bg">
    <com.huateng.collection.widget.loadingball.BallView
        android:id="@+id/loadingBall"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        app:ball_colors="@array/colors"
        app:balls="3"
        app:enable_size_animation="true"
        app:max_ball_size="12dp"
        app:min_ball_size="5dp"
        app:movement_cycle_time="1500"
        app:size_cycle_time="500" />
    <LinearLayout
        android:id="@+id/container_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <FrameLayout
        android:id="@+id/v_segmentControl"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="@color/white"
        >
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gray_listitem"
            android:layout_gravity="left"
            />
        <com.huateng.collection.widget.SegmentControl
            android:id="@+id/csv_segmentControl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:scv_SegmentPaddingHorizontal="20dp"
            app:scv_TextSelectedColor="@color/white"
            app:scv_TextNormalColor="@color/theme_color"
            app:scv_BackgroundNormalColor="@color/white"
            app:scv_BackgroundSelectedColor="@color/theme_color"
            app:scv_FrameColor="@color/theme_color"
            app:scv_FrameCornerRadius="5dp"
            app:scv_FrameWidth="1dp"
            app:scv_Gradient="true"
            app:scv_SegmentPaddingVertical="10dp"
            app:scv_TextArray="@array/segment_control_titles"/>

        </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_diliver"
        />

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_caseDetail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >

        </android.support.v4.view.ViewPager>
    <LinearLayout
        android:id="@+id/container_caseFill"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent"
        android:visibility="gone"
        >

    </LinearLayout>
    <LinearLayout
        android:id="@+id/v_tabContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_listitem"
            />
        <com.huateng.fm.ui.view.tab.FmTabContainer
            android:id="@+id/csv_tabContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_listitem"
            />
    </LinearLayout>


    </LinearLayout>
</FrameLayout>
