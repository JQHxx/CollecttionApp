<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dialog_margin"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

        <com.huateng.phone.collection.widget.UniversalInput
            android:id="@+id/csv_caseNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black_text"
            android:textSize="@dimen/dialog_item_text_size"
            app:inputType="text"
            app:labelText="案件号：" />

        <com.huateng.phone.collection.widget.UniversalInput
            android:id="@+id/csv_custNo"
            style="@style/CommonInputItem"
            app:inputType="text"
            app:labelText="客户号：" />

        <com.huateng.phone.collection.widget.UniversalInput
            android:id="@+id/csv_custName"
            style="@style/CommonInputItem"
            app:inputType="editText"
            app:labelText="姓名：" />

        <com.huateng.phone.collection.widget.UniversalInput
            android:id="@+id/csv_phoneType"
            style="@style/CommonInputItem"
            app:inputType="spinner"
            app:labelText="电话类型：" />

        <com.huateng.phone.collection.widget.UniversalInput
            android:id="@+id/csv_custRel"
            style="@style/CommonInputItem"
            app:inputType="spinner"
            app:labelText="与客户关系：" />

        <com.huateng.phone.collection.widget.UniversalInput
            android:id="@+id/csv_phone"
            style="@style/CommonInputItem"
            app:inputType="editText"
            app:labelText="电话号码：" />

</LinearLayout>