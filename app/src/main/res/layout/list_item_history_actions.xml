<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingBottom="16dp"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:paddingTop="16dp">

    <TextView
        android:id="@+id/tv_actionCode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_weight="0.8"
        android:gravity="center"
        android:text="行动码"
        android:textColor="@color/content_text_gray"
        android:textSize="@dimen/content_text_size" />

    <TextView
        android:id="@+id/tv_actionName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_weight="1.2"
        android:gravity="center"
        android:text="行动码名称"
        android:singleLine="true"
        android:textColor="@color/content_text_gray"
        android:textSize="@dimen/content_text_size" />

    <TextView
        android:id="@+id/tv_actionDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/content_margin_left"
        android:layout_weight="1.2"
        android:gravity="center"
        android:text="行动日期"
        android:textColor="@color/content_text_gray"
        android:textSize="@dimen/content_text_size" />


    <com.huateng.collection.widget.ShrinkableTextView
        android:id="@+id/tv_actionNote"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_weight="1.6"
        android:gravity="center"
        android:textColor="@color/content_text_gray"
        app:etv_MaxLinesOnShrink="1"
        android:textSize="@dimen/content_text_size" />

</LinearLayout>