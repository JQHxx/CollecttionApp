<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_setting"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="90dp"
        android:scaleType="fitCenter"
        android:src="@drawable/nbcb_logo" />

    <TextView
        android:id="@+id/tv_loginSystem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="清收平台系统登录"
        android:textColor="@color/black"
        android:textSize="29sp"
        android:textStyle="bold" />


    <LinearLayout
        android:id="@+id/ll_user_id"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/edit_backgrad"
        android:gravity="center_vertical"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_userName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/login_input_bg"
            android:drawableLeft="@drawable/icon_login_username"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:hint="@string/phloginid"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textSize="16sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/llpsd"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/edit_backgrad"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/login_input_bg"
            android:drawableLeft="@drawable/icon_login_pwd"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:hint="@string/phloginpsd"
            android:imeOptions="actionSend"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textSize="16sp" />
    </LinearLayout>


    <com.huateng.fm.ui.widget.FmButton
        android:enabled="false"
        android:id="@+id/btn_login"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:minHeight="0dp"
        android:singleLine="true"
        android:text="登录"
        android:textColor="@color/white"
        android:background="@drawable/btn_switch_bg"
        android:textSize="16sp"/>


</LinearLayout>